<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.launches.detail.LaunchDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivLaunch"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                tools:src="@tools:sample/avatars"
                android:scaleType="centerCrop"
                android:contentDescription="@string/launch" />

            <TextView
                android:id="@+id/tvLaunchDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hello"
                android:paddingTop="4dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/success"
                android:paddingHorizontal="10dp"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/tvLaunchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hello"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/on_surface"
                android:paddingHorizontal="10dp"
                android:maxLines="1"
                android:gravity="start"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:maxLines="1"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hello"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/on_surface"
                android:paddingHorizontal="20dp"
                android:maxLines="1"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/tvTwitterLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hello"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary"
                android:paddingHorizontal="20dp"
                android:maxLines="1"
                android:gravity="start"
                />
            <TextView
                android:id="@+id/tvWikiLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hello"
                android:paddingBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/primary"
                android:paddingHorizontal="20dp"
                android:maxLines="1"
                android:gravity="start"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>